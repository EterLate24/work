<h1>Cab</h1>

{{#if all_items.length}}
<div>
    <h2>Purchased items</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Type</th>
            <th>Date</th>
        </tr>
        {{#each all_items}}
        <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{type}}</td>
            <td>{{date}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3>No items</h3>
{{/if}}
